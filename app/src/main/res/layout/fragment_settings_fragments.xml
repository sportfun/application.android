<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ovh.shr.sportsfun.sportsfunapplication.fragments.SettingsFragments"
    android:background="@color/lightgrey">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/btnViewProfil"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_marginTop="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/lblFullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingTop="5dp"
                    android:text="Jimmy King"
                    android:textAppearance="?android:attr/textAppearanceButton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingTop="15dp"
                    android:text="@string/txtViewProfil" />

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnIdentity"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/baseline_fingerprint_black_36" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingTop="5dp"
                    android:text="@string/txtIdentityLabel"
                    android:textAppearance="?android:attr/textAppearanceButton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingTop="15dp"
                    android:text="@string/txtIdentityDescription"/>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnPassword"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/baseline_lock_black_36" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingTop="5dp"
                    android:text="@string/txtPasswordLabel"
                    android:textAppearance="?android:attr/textAppearanceButton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingTop="15dp"
                    android:text="@string/txtPasswordDescription" />

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnBio"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/baseline_track_changes_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingTop="5dp"
                    android:text="@string/txtBioLabel"
                    android:textAppearance="?android:attr/textAppearanceButton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:paddingTop="15dp"
                    android:text="@string/txtBioDescription" />

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnLogout"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/baseline_power_settings_new_black_36" />

                <TextView
                    android:id="@+id/txtLogoutText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="50dp"
                    android:text="@string/txtLogoutDescription" />

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>


</FrameLayout>
